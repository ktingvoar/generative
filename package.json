{
    "name": "generative",
    "author": "@neefrehman",
    "description": "A digital playground for experimenting with generative art",
    "homepage": "https://generative.neef.co",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/neefrehman/Generative.git"
    },
    "dependencies": {
        "@zeit/next-css": "^1.0.1",
        "linaria": "^1.3.3",
        "next": "^9.3.6",
        "p5": "^0.10.2",
        "react": "16.13.1",
        "react-dom": "16.13.1"
    },
    "devDependencies": {
        "@types/node": "^13.13.4",
        "@types/p5": "^0.9.0",
        "@types/react": "^16.9.34",
        "@typescript-eslint/eslint-plugin": "^2.30.0",
        "@typescript-eslint/parser": "^2.30.0",
        "babel-eslint": "^10.1.0",
        "eslint": "^6.8.0",
        "eslint-config-airbnb": "^18.1.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-loader": "^4.0.2",
        "eslint-plugin-import": "^2.20.2",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-prettier": "^3.1.3",
        "eslint-plugin-react": "^7.19.0",
        "husky": "^4.2.5",
        "lint-staged": "^10.2.2",
        "prettier": "^2.0.5",
        "typescript": "^3.9.0-dev.20200427"
    },
    "scripts": {
        "format": "prettier \"src/**/*.{js,ts,tsx}\"",
        "format:fix": "prettier \"src/**/*.{js,ts,tsx}\" --write",
        "lint": "eslint \"src/**/*.{js,ts,tsx}\"",
        "lint:fix": "eslint \"src/**/*.{js,ts,tsx}\" --fix",
        "typecheck": "tsc",
        "dev": "next dev",
        "build": "next build",
        "export": "next export",
        "start": "next start"
    },
    "lint-staged": {
        "*.(js|ts|tsx)": [
            "eslint --fix",
            "prettier --write",
            "git add"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    }
}
