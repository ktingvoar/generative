{
  "name": "generative",
  "author": "@neefrehman",
  "description": "A digital playground for experimenting with generative art",
  "homepage": "https://github.com/neefrehman/Generative",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neefrehman/Generative.git"
  },
  "bugs": {
    "url": "https://github.com/neefrehman/Generative/issues"
  },
  "dependencies": {
    "@zeit/next-css": "^1.0.1",
    "core-js": "^3.6.5",
    "linaria": "^1.3.3",
    "next": "9.3.5",
    "p5": "^1.0.0",
    "react": "16.13.1",
    "react-dom": "16.13.1"
  },
  "devDependencies": {
    "@types/p5": "^0.9.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-loader": "^4.0.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.7",
    "prettier": "^2.0.5"
  },
  "browserslist": "> 1.7%",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "format": "prettier \"src/**/*.js\"",
    "format:fix": "prettier \"src/**/*.js\" --write",
    "lint": "eslint \"src/**/*.js\"",
    "lint:fix": "eslint \"src/**/*.js\" --fix"
  },
  "lint-staged": {
    "*.(js|jsx|ts|tsx)": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": { "pre-commit": "lint-staged" }
  }
}
