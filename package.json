{
    "name": "generative",
    "author": "@neefrehman",
    "description": "A digital playground for experimenting with generative art, WebGL and Machine Learning",
    "homepage": "https://generative.neef.co",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/neefrehman/Generative.git"
    },
    "license": "MIT",
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "export": "next export",
        "start": "next start",
        "format": "prettier \"src/**/*.{js,ts,tsx}\"",
        "format:fix": "prettier \"src/**/*.{js,ts,tsx}\" --write",
        "lint": "eslint \"src/**/*.{js,ts,tsx}\"",
        "lint:fix": "eslint \"src/**/*.{js,ts,tsx}\" --fix",
        "format-glsl": "clang-format -style=file **/*.frag **/*.vert **/*.glsl",
        "format-glsl:fix": "clang-format -i -style=file **/*.frag **/*.vert **/*.glsl",
        "typecheck": "tsc"
    },
    "dependencies": {
        "@emotion/react": "^11.1.5",
        "@emotion/styled": "^11.1.5",
        "@tensorflow/tfjs": "^2.8.6",
        "bezier-easing": "^2.1.0",
        "component-material": "^1.0.6",
        "drei": "^2.2.21",
        "glsl-easings": "^1.0.0",
        "glsl-hsl2rgb": "^1.1.0",
        "glsl-noise": "0.0.0",
        "glsl-smooth-min": "^1.0.0",
        "glsl-worley": "^1.0.2",
        "glslify": "^7.1.1",
        "glslify-hex": "^2.1.1",
        "gsap": "^3.6.0",
        "ml5": "^0.6.0",
        "next": "^10.0.7",
        "nice-color-palettes": "^3.0.0",
        "p5": "^1.2.0",
        "postprocessing": "^6.20.3",
        "react": "17.0.1",
        "react-dom": "17.0.1",
        "react-postprocessing": "1.4.0",
        "react-spring": "^8.0.27",
        "react-three-editable": "^0.8.1",
        "react-three-fiber": "5.3.18",
        "react-use-gesture": "^9.0.4",
        "react-xr": "^1.1.0",
        "simplex-noise": "^2.4.0",
        "three": "^0.124.0",
        "use-cannon": "^0.5.3"
    },
    "devDependencies": {
        "@babel/core": "^7.12.17",
        "@emotion/babel-plugin": "^11.2.0",
        "@emotion/eslint-plugin": "^11.2.0",
        "@types/node": "^14.14.31",
        "@types/p5": "^0.9.1",
        "@types/prettier": "^2.2.1",
        "@types/react": "^17.0.2",
        "@types/three": "^0.125.1",
        "@typescript-eslint/eslint-plugin": "^4.15.1",
        "@typescript-eslint/parser": "^4.15.1",
        "babel-plugin-glsl": "^1.0.0",
        "clang-format": "^1.5.0",
        "eslint": "^7.20.0",
        "eslint-config-airbnb": "^18.2.1",
        "eslint-config-prettier": "^8.0.0",
        "eslint-import-resolver-typescript": "^2.4.0",
        "eslint-loader": "^4.0.2",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jsx-a11y": "^6.4.1",
        "eslint-plugin-prettier": "^3.3.1",
        "eslint-plugin-react": "^7.22.0",
        "eslint-plugin-react-hooks": "^4.2.0",
        "file-loader": "^6.2.0",
        "glslify-loader": "^2.0.0",
        "husky": "^4.3.8",
        "lint-staged": "^10.5.4",
        "pinst": "^2.1.4",
        "prettier": "^2.2.1",
        "raw-loader": "^4.0.2",
        "typescript": "^4.1.5",
        "url-loader": "^4.1.1"
    },
    "glslify": {
        "transform": [
            "glslify-hex"
        ]
    },
    "lint-staged": {
        "*.(js|ts|tsx)": [
            "eslint --fix",
            "prettier --write",
            "git add"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    }
}
